<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Job Roles</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/styles.css">
</head>

<body class="d-flex flex-column min-vh-100 bg-img ">
    <div class="text-bg-light p-3 d-flex align-items-center justify-content-between kainos-font">
        <a href="/" class="d-inline-block">
            <img src="/logos/kainos_logo.png" alt="Kainos Logo" height="80px">
        </a>
        <h1 class="ms-3 mb-0 mx-3 flex-grow-1 text-end w-100">Current Vacancies</h1>
    </div>

    <div class="container my-5 kainos-font">
        <% if (roles && roles.length > 0) { %>
            <div class="table-responsive rounded-4 shadow">
                <table class="table table-hover table-striped align-middle mb-0">
                    <thead>
                        <tr>
                            <th scope="col">Role Name</th>
                            <th scope="col">Location</th>
                            <th scope="col">Capability</th>
                            <th scope="col">Band</th>
                            <th scope="col">Closing Date</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% roles.forEach(function(role) { %>
                            <tr>
                                <td>
                                    <%= role.roleName %>
                                </td>
                                <td>
                                    <%= role.location %>
                                </td>
                                <td>
                                    <%= role.capability.capabilityName %>
                                </td>
                                <td>
                                    <%= role.band.bandName %>
                                </td>
                                <td>
                                    <%= new Date(role.closingDate).toLocaleDateString('en-GB') %>
                                </td>
                                <td>
                                    <a href="/job-roles/<%= role.jobRoleId %>" class="btn kainos-green btn-sm">View Details</a>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <div class="alert alert-info text-center my-5 rounded-4 shadow">
                <i class="bi bi-info-circle me-2"></i>
                No job roles available at the moment.
            </div>
        <% } %>
    </div>
    <footer class="text-center py-3 footer text-white mt-auto" id="footer">
        <div class="footer__logo flex justify-content-center">
            <a href="/" class="d-inline-block">
                <img src="/logos/kainos_logo.png" alt="Kainos Logo" height="50px">
            </a>
        </div>
        <p class="mb-0">&copy; Copyright Â© 2025 Kainos. Registered in NI NI019370</p>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
        crossorigin="anonymous"></script>
</body>

</html>